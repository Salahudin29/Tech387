<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/slikaExercises"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/imeExercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercises"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/slikaExercises"
        app:layout_constraintRight_toRightOf="@+id/slikaExercises"
        app:layout_constraintTop_toBottomOf="@+id/slikaExercises" />

    <TextView
        android:id="@+id/desExercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripcija"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/slikaExercises"
        app:layout_constraintRight_toRightOf="@+id/slikaExercises"
        app:layout_constraintTop_toBottomOf="@+id/imeExercises" />

</android.support.constraint.ConstraintLayout>